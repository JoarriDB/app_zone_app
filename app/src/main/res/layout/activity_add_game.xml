<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gaming_bg_primary">

    <!-- Fondo con gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gaming_gradient_bg"
        android:padding="24dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® Registrar Nuevo Juego"
            android:textSize="28sp"
            android:textColor="@color/gaming_cyan"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-black" />

        <!-- Formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/gaming_surface"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Campo TÃ­tulo -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_title"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TÃ­tulo del juego"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/gaming_surface_variant"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/gaming_purple"
                    app:hintTextColor="@color/gaming_text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGameTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/gaming_text_primary"
                        android:textColorHint="@color/gaming_text_hint"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo GÃ©nero -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_genre"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="GÃ©nero (Ej: AcciÃ³n, RPG, Estrategia)"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/gaming_surface_variant"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/gaming_purple"
                    app:hintTextColor="@color/gaming_text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGameGenre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/gaming_text_primary"
                        android:textColorHint="@color/gaming_text_hint"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Plataforma -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_platform"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plataforma (PC, PS5, Xbox, Switch)"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/gaming_surface_variant"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/gaming_purple"
                    app:hintTextColor="@color/gaming_text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGamePlatform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/gaming_text_primary"
                        android:textColorHint="@color/gaming_text_hint"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo DescripciÃ³n -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DescripciÃ³n (opcional)"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/gaming_surface_variant"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/gaming_purple"
                    app:hintTextColor="@color/gaming_text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGameDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:maxLines="3"
                        android:inputType="textMultiLine"
                        android:textColor="@color/gaming_text_primary"
                        android:textColorHint="@color/gaming_text_hint"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo AÃ±o de lanzamiento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_year"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AÃ±o de lanzamiento"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/gaming_surface_variant"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/gaming_purple"
                    app:hintTextColor="@color/gaming_text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGameYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/gaming_text_primary"
                        android:textColorHint="@color/gaming_text_hint"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Rating -->
                <TextView
                    android:id="@+id/tvRatingLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating: 0/5 â­"
                    android:textSize="16sp"
                    android:textColor="@color/gaming_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    android:layout_marginBottom="16dp"
                    android:progressTint="@color/gaming_highlight"
                    android:secondaryProgressTint="@color/gaming_text_hint" />

                <!-- Switch para completado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Â¿Ya lo completaste?"
                        android:textColor="@color/gaming_text_primary"
                        android:textSize="16sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/gaming_neon_green"
                        android:trackTint="@color/gaming_surface_variant" />

                </LinearLayout>

                <!-- BotÃ³n Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveGame"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ’¾ GUARDAR JUEGO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:background="@drawable/gaming_button_primary"
                    android:textColor="@color/white"
                    app:cornerRadius="28dp"
                    app:backgroundTint="@null"
                    android:layout_marginTop="8dp" />

                <!-- BotÃ³n Cancelar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="CANCELAR"
                    android:textColor="@color/gaming_text_secondary"
                    android:layout_marginTop="8dp"
                    app:cornerRadius="24dp"
                    app:strokeColor="@color/gaming_text_secondary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Indicador de carga -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/gaming_purple"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>